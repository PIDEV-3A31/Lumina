<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.Transport.ReserverTransport">
   <top>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="bus" fitHeight="54.0" fitWidth="54.0" layoutX="76.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/transport.png" />
               </image>
            </ImageView>
            <ImageView fx:id="taxi" fitHeight="54.0" fitWidth="72.0" layoutX="187.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/taxi-avant%20(1).png" />
               </image>
            </ImageView>
            <ImageView fx:id="train" fitHeight="54.0" fitWidth="72.0" layoutX="288.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/train.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </top>
   <center>
        <ScrollPane fx:id="scroll" prefHeight="286.0" prefWidth="450.0" styleClass="transparent" stylesheets="@style/style.css" BorderPane.alignment="CENTER">
            <content>
                <GridPane fx:id="grid" prefHeight="0.0" prefWidth="0.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
               <padding>
                  <Insets top="100.0" />
               </padding>
                </GridPane>
            </content>
        </ScrollPane>
   </center>
