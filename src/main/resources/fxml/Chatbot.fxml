<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.ChatbotController">
    <children>
        <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="300" prefWidth="400" />
        <TextField fx:id="userInput" promptText="Entrez votre message..." prefWidth="400" />
        <Button fx:id="sendButton" text="Envoyer" />
    </children>
</VBox>